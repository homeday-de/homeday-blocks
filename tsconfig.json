{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["./tests/*"],
      "homeday-blocks/*": ["./*"],
      "*": ["src/@types/*.d.ts"]
    },
    "lib": [
      "es2019",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "main.ts",
    ".eslintrc.js",
    ".releaserc.js",
    "webpack-alias.js",
    "*.config.js",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
